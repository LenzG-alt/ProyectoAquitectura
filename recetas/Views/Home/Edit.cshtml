@model recetas.Models.Receta

@{
    ViewData["Title"] = "Editar Receta";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 flex items-center">
                <i class="fas fa-edit text-primary mr-3"></i>
                Editar Receta
            </h1>
            <p class="text-gray-600 mt-2">Actualiza los detalles de tu receta</p>
        </div>

        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"></div>
            
            <input type="hidden" asp-for="Id" />
            
            
            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-700 mb-2">URL de Imagen (opcional)</label>
                    <input asp-for="ImageUrl" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                    <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <textarea asp-for="Description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Category" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <select asp-for="Category" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="">Selecciona una categoría</option>
                        <option value="Desayuno">Desayuno</option>
                        <option value="Almuerzo">Almuerzo</option>
                        <option value="Cena">Cena</option>
                        <option value="Postre">Postre</option>
                        <option value="Aperitivo">Aperitivo</option>
                        <option value="Bebida">Bebida</option>
                        <option value="Plato Principal">Plato Principal</option>
                        <option value="Ensalada">Ensalada</option>
                    </select>
                    <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Difficulty" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <select asp-for="Difficulty" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="">Selecciona la dificultad</option>
                        <option value="Fácil">Fácil</option>
                        <option value="Intermedio">Intermedio</option>
                        <option value="Difícil">Difícil</option>
                    </select>
                    <span asp-validation-for="Difficulty" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div class="grid md:grid-cols-4 gap-6">
                <div>
                    <label asp-for="PreparationTime" class="block text-sm font-medium text-gray-700 mb-2">Tiempo (min)</label>
                    <input asp-for="PreparationTime" type="number" min="1" max="480" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                    <span asp-validation-for="PreparationTime" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Servings" class="block text-sm font-medium text-gray-700 mb-2">Porciones</label>
                    <input asp-for="Servings" type="number" min="1" max="10" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                    <span asp-validation-for="Servings" class="text-red-500 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Rating" class="block text-sm font-medium text-gray-700 mb-2">Calificación</label>
                    <select asp-for="Rating" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="1">⭐ 1 estrella</option>
                        <option value="2">⭐⭐ 2 estrellas</option>
                        <option value="3">⭐⭐⭐ 3 estrellas</option>
                        <option value="4">⭐⭐⭐⭐ 4 estrellas</option>
                        <option value="5">⭐⭐⭐⭐⭐ 5 estrellas</option>
                    </select>
                    <span asp-validation-for="Rating" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="flex items-center">
                    <label class="flex items-center cursor-pointer">
                        <input asp-for="IsFavorite" type="checkbox" class="sr-only">
                        <div class="relative">
                            <input asp-for="IsFavorite" type="checkbox" class="sr-only peer">
                            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary/25 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
                        </div>
                        <span class="ml-3 text-sm font-medium text-gray-700">Favorito</span>
                    </label>
                </div>
            </div>

            <div>
                <label asp-for="Ingredients" class="block text-sm font-medium text-gray-700 mb-2">Ingredientes</label>
                <textarea asp-for="Ingredients" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                <span asp-validation-for="Ingredients" class="text-red-500 text-sm"></span>
                <p class="text-sm text-gray-500 mt-1">Separa cada ingrediente con una coma</p>
            </div>

            <div>
                <label asp-for="Instructions" class="block text-sm font-medium text-gray-700 mb-2">Instrucciones</label>
                <textarea asp-for="Instructions" rows="8" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                <span asp-validation-for="Instructions" class="text-red-500 text-sm"></span>
                <p class="text-sm text-gray-500 mt-1">Escribe cada paso en una línea nueva</p>
            </div>

            <div class="flex gap-4 pt-6 border-t border-gray-200">
                <button type="submit" class="bg-primary hover:bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors shadow-lg">
                    <i class="fas fa-save mr-2"></i>Actualizar Receta
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-8 py-3 rounded-lg font-semibold transition-colors">
                    <i class="fas fa-times mr-2"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
