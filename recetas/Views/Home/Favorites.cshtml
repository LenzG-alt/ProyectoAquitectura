@model IEnumerable<recetas.Models.Receta>

@{
    ViewData["Title"] = "Recetas Favoritas";
}

<div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-800 flex items-center">
        <i class="fas fa-heart text-red-500 mr-3"></i>
        Mis Recetas Favoritas
    </h1>
    <p class="text-gray-600 mt-2">Tus recetas más queridas en un solo lugar</p>
</div>

@if (Model.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var recipe in Model)
        {
            <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="relative">
                    @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                    {
                        <img src="@recipe.ImageUrl" alt="@recipe.Name" class="w-full h-48 object-cover">
                    }
                    else
                    {
                        <div class="w-full h-48 bg-gradient-to-br from-primary to-secondary flex items-center justify-center">
                            <i class="fas fa-utensils text-white text-4xl"></i>
                        </div>
                    }
                    <div class="absolute top-4 right-4 p-2 rounded-full bg-white shadow-lg">
                        <i class="fas fa-heart text-red-500"></i>
                    </div>
                </div>

                <div class="p-6">
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="text-xl font-bold text-gray-800 line-clamp-2">@recipe.Name</h3>
                        <div class="flex items-center ml-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= recipe.Rating ? "text-yellow-400" : "text-gray-300") text-sm"></i>
                            }
                        </div>
                    </div>

                    <p class="text-gray-600 text-sm mb-4 line-clamp-3">@recipe.Description</p>

                    <div class="flex flex-wrap gap-2 mb-4">
                        <span class="px-3 py-1 bg-primary bg-opacity-10 text-primary text-xs font-medium rounded-full">
                            @recipe.Category
                        </span>
                        <span class="px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                            @recipe.Difficulty
                        </span>
                    </div>

                    <div class="flex justify-between items-center text-sm text-gray-500 mb-4">
                        <div class="flex items-center">
                            <i class="fas fa-clock mr-1"></i>
                            @recipe.PreparationTime min
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-users mr-1"></i>
                            @recipe.Servings porciones
                        </div>
                    </div>

                    <div class="flex gap-2">
                        <a asp-action="Details" asp-route-id="@recipe.Id"
                           class="flex-1 bg-primary hover:bg-orange-600 text-white text-center py-2 px-4 rounded-lg font-medium transition-colors">
                            Ver Receta
                        </a>
                        <a asp-action="Edit" asp-route-id="@recipe.Id"
                           class="bg-gray-100 hover:bg-gray-200 text-gray-700 py-2 px-4 rounded-lg transition-colors">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-16">
        <i class="fas fa-heart text-gray-400 text-6xl mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-600 mb-2">No tienes recetas favoritas</h3>
        <p class="text-gray-500 mb-6">Marca algunas recetas como favoritas para verlas aquí.</p>
        <a asp-action="Index" class="bg-primary hover:bg-orange-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors">
            <i class="fas fa-search mr-2"></i>Explorar Recetas
        </a>
    </div>
}
