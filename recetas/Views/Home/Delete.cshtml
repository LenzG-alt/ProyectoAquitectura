@model recetas.Models.Receta

@{
    ViewData["Title"] = "Eliminar Receta";
}

<div class="container my-5">
    <div class="max-w-2xl mx-auto bg-white border border-red-300 rounded-xl shadow-lg overflow-hidden">

        <!-- Encabezado de advertencia -->
        <div class="bg-red-100 border-bottom border-red-300 p-5 text-center">
            <h1 class="text-3xl font-bold text-red-800 mb-2">
                <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
            </h1>
            <p class="text-red-700">¿Estás seguro de que deseas eliminar esta receta? Esta acción es permanente.</p>
        </div>

        <!-- Detalles de la receta -->
        <div class="p-5">
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                <h4 class="font-semibold text-gray-800 text-lg">@Model.Name</h4>
                <p class="text-gray-600 mt-1">@Model.Description</p>

                <div class="d-flex flex-wrap gap-3 text-sm text-muted mt-3">
                    <span><i class="fas fa-clock me-1"></i>@Model.PreparationTime min</span>
                    <span><i class="fas fa-users me-1"></i>@Model.Servings porciones</span>
                    <span><i class="fas fa-tag me-1"></i>@Model.Category</span>
                    <span><i class="fas fa-signal me-1"></i>@Model.Difficulty</span>
                </div>
            </div>

            <!-- Acciones -->
            <form asp-action="Delete" method="post" class="d-flex flex-wrap justify-center gap-3 mt-5">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">
                    <i class="fas fa-trash me-2"></i>Sí, eliminar receta
                </button>

                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg px-5 shadow-sm">
                    <i class="fas fa-arrow-left me-2"></i>Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
